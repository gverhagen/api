                    + invoice
                    + ticket
                    + milestone
                    + todo
                    + meeting
            + name: custom field name (string)
            + type: date (enum[string])
                + Members
                    + date
                    + string
                    + int
                    + money
                    + boolean
                    + alt_email
                    + enum
                    + textblob
                    + set
                    + company
                    + contact
                    + employee
                    + auto_calculated_field
                    + telephone
                    + product
                    + number
